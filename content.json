:root{
  --bg: #ffffff;
  --surface: #ffffff;
  --surface-2: #f7f7fb;
  --text: #0b0b10;
  --muted: #5a5a6a;
  --border: rgba(10,10,18,.12);

  --primary: #6d67ff;
  --primary-2: #bfa8ff;

  --shadow: 0 10px 30px rgba(22,22,32,.10);
  --radius: 18px;
  --radius-sm: 12px;

  --container: 1120px;
}

html[data-theme="dark"]{
  --bg: #0c0c12;
  --surface: #0f0f18;
  --surface-2: #141423;
  --text: #f1f1ff;
  --muted: rgba(241,241,255,.65);
  --border: rgba(255,255,255,.12);
  --shadow: 0 16px 40px rgba(0,0,0,.45);
}

*{ box-sizing: border-box; }
html,body{ height: 100%; }
body{
  margin: 0;
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Noto Sans CJK SC", sans-serif;
  color: var(--text);
  background: radial-gradient(900px 400px at 15% 0%, color-mix(in srgb, var(--primary) 25%, transparent), transparent 60%),
              radial-gradient(900px 400px at 80% 10%, color-mix(in srgb, var(--primary-2) 22%, transparent), transparent 60%),
              var(--bg);
  line-height: 1.5;
}

a{ color: inherit; text-decoration: none; }
a:hover{ text-decoration: underline; }
img{ max-width: 100%; height: auto; display: block; }

.container{
  max-width: var(--container);
  margin: 0 auto;
  padding: 0 20px;
}

.skip-link{
  position: absolute;
  left: -999px;
  top: 10px;
  background: var(--surface);
  border: 1px solid var(--border);
  padding: 10px 14px;
  border-radius: 10px;
  z-index: 1000;
}
.skip-link:focus{ left: 10px; }

.site-header{
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: blur(14px);
  background: color-mix(in srgb, var(--bg) 82%, transparent);
  border-bottom: 1px solid var(--border);
}

.header-inner{
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 18px;
  padding: 14px 0;
}

.brand{
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: 800;
  letter-spacing: .2px;
}

.logo{
  display: grid;
  place-items: center;
  width: 34px; height: 34px;
  border-radius: 12px;
  background: color-mix(in srgb, var(--primary) 22%, transparent);
  border: 1px solid var(--border);
}

.nav{
  display: flex;
  gap: 18px;
  font-weight: 600;
  color: var(--muted);
}
.nav a{ padding: 8px 8px; border-radius: 10px; }
.nav a:hover{ color: var(--text); background: color-mix(in srgb, var(--surface-2) 72%, transparent); text-decoration: none; }

.header-actions{
  display: flex;
  gap: 10px;
  align-items: center;
}

.chip{
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 12px;
  border-radius: 14px;
  border: 1px solid var(--border);
  background: color-mix(in srgb, var(--surface) 70%, transparent);
  box-shadow: 0 1px 0 rgba(255,255,255,.25) inset;
  cursor: pointer;
  font-weight: 650;
}
.chip:hover{ background: color-mix(in srgb, var(--surface-2) 65%, transparent); }
.chip-icon{ font-size: 14px; opacity: .8; }

.chip-primary{
  background: linear-gradient(135deg, color-mix(in srgb, var(--primary) 24%, var(--surface)), color-mix(in srgb, var(--primary-2) 24%, var(--surface)));
  border-color: color-mix(in srgb, var(--primary) 25%, var(--border));
}

main{ padding-bottom: 60px; }

.hero{
  padding: 42px 0 10px;
}
.hero-inner{
  display: grid;
  grid-template-columns: 1.2fr .9fr;
  gap: 24px;
  align-items: start;
}
.eyebrow{
  color: var(--muted);
  font-weight: 650;
  margin: 0 0 12px;
}
.hero-title{
  margin: 0;
  font-size: clamp(2.2rem, 3.5vw, 3.2rem);
  letter-spacing: -0.8px;
  line-height: 1.05;
}
.hero-subtitle{
  display: block;
  margin-top: 8px;
  font-size: 1.05rem;
  font-weight: 650;
  color: var(--muted);
}
.hero-lead{
  margin: 14px 0 0;
  font-size: 1.05rem;
  color: color-mix(in srgb, var(--text) 86%, transparent);
  max-width: 60ch;
}

.hero-metrics{
  display: grid;
  grid-template-columns: repeat(3, minmax(0,1fr));
  gap: 12px;
  margin: 18px 0;
}
.metric{
  padding: 12px 12px;
  border-radius: var(--radius-sm);
  border: 1px solid var(--border);
  background: color-mix(in srgb, var(--surface-2) 70%, transparent);
}
.metric strong{
  display: block;
  font-size: 1.05rem;
}
.metric span{
  display: block;
  color: var(--muted);
  font-size: .9rem;
  margin-top: 2px;
}

.hero-cta{ display: flex; gap: 10px; flex-wrap: wrap; margin-top: 18px; }

.btn{
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 12px 14px;
  border-radius: 14px;
  border: 1px solid var(--border);
  background: color-mix(in srgb, var(--surface) 72%, transparent);
  font-weight: 700;
  cursor: pointer;
}
.btn:hover{ background: color-mix(in srgb, var(--surface-2) 70%, transparent); text-decoration: none; }
.btn-primary{
  border-color: color-mix(in srgb, var(--primary) 35%, var(--border));
  background: linear-gradient(135deg, color-mix(in srgb, var(--primary) 28%, var(--surface)), color-mix(in srgb, var(--primary-2) 26%, var(--surface)));
}
.btn-ghost{ background: color-mix(in srgb, var(--surface) 65%, transparent); }
.btn-icon{ opacity: .85; }

.social{
  display: flex;
  gap: 10px;
  margin-top: 18px;
  flex-wrap: wrap;
}
.social a{
  padding: 10px 12px;
  border-radius: 14px;
  border: 1px solid var(--border);
  background: color-mix(in srgb, var(--surface) 65%, transparent);
  font-weight: 650;
}
.social a:hover{ background: color-mix(in srgb, var(--surface-2) 70%, transparent); text-decoration: none; }

.hero-card{
  border: 1px solid var(--border);
  background: linear-gradient(180deg, color-mix(in srgb, var(--surface) 72%, transparent), color-mix(in srgb, var(--surface-2) 70%, transparent));
  box-shadow: var(--shadow);
  border-radius: var(--radius);
  padding: 16px;
  position: sticky;
  top: 86px;
}
.avatar{
  width: 56px;
  height: 56px;
  border-radius: 18px;
  overflow: hidden;
  border: 1px solid var(--border);
  background: color-mix(in srgb, var(--primary) 18%, transparent);
}
.hero-card-body{ margin-top: 10px; }
.hero-card-title{ font-weight: 800; font-size: 1.1rem; margin-bottom: 8px; }
.hero-card-oneLiner{ color: color-mix(in srgb, var(--text) 88%, transparent); font-weight: 650; }
.hero-card-list{ margin: 12px 0 0; padding-left: 18px; color: var(--muted); }
.hero-card-list li{ margin: 6px 0; }

.section{ padding: 48px 0 0; }
.section-head h2{ margin: 0; font-size: 1.8rem; }
.section-head p{ margin: 8px 0 0; }
.muted{ color: var(--muted); }

.about-grid{
  display: grid;
  grid-template-columns: 1.2fr .8fr;
  gap: 18px;
  margin-top: 18px;
}
.about-main{
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 18px;
  background: color-mix(in srgb, var(--surface) 72%, transparent);
}
.about-main p{ margin: 0 0 12px; }
.bullets{ margin: 12px 0 0; padding-left: 18px; color: var(--muted); }
.bullets li{ margin: 6px 0; }

.about-side{
  display: grid;
  gap: 12px;
}
.fact{
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 14px;
  background: color-mix(in srgb, var(--surface-2) 70%, transparent);
}
.fact .k{ color: var(--muted); font-weight: 700; font-size: .95rem; }
.fact .v{ margin-top: 6px; font-weight: 750; }

.filters{
  display: flex;
  gap: 12px;
  align-items: center;
  margin: 16px 0;
  flex-wrap: wrap;
}
.filter-tags{ display: flex; gap: 8px; flex-wrap: wrap; }
.filters .chip{ padding: 8px 10px; border-radius: 12px; font-weight: 700; }

.grid{
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 14px;
}
.card{
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 16px;
  background: color-mix(in srgb, var(--surface) 72%, transparent);
  box-shadow: 0 1px 0 rgba(255,255,255,.25) inset;
}
.card h3{ margin: 0 0 8px; font-size: 1.15rem; }
.card p{ margin: 0; color: var(--muted); }
.card .meta{ margin-top: 12px; display: flex; flex-wrap: wrap; gap: 8px; }
.tag{
  font-size: .85rem;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid var(--border);
  background: color-mix(in srgb, var(--surface-2) 70%, transparent);
  color: var(--muted);
  font-weight: 650;
}

.timeline{
  display: grid;
  gap: 12px;
  margin-top: 14px;
}
.titem{
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 16px;
  background: color-mix(in srgb, var(--surface) 72%, transparent);
}
.titem .top{
  display: flex;
  justify-content: space-between;
  gap: 12px;
  flex-wrap: wrap;
}
.titem .org{ color: var(--muted); font-weight: 650; }
.titem ul{ margin: 10px 0 0; padding-left: 18px; color: var(--muted); }
.titem li{ margin: 6px 0; }

